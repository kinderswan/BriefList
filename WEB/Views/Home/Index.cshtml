@{
    ViewBag.Title = "Main";
}

<script>

    function ModalOnSuccess() {
        $('#modDialog').show();
    }

</script>

<div id="change" style="width:220px"></div>
<div id="changefail" style="width:220px"></div>
<div id="loading" style="display:none;color:red;font-size:x-large">Идет загрузка...</div>

<div id="modDialog" class="modal">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<div>
    @Ajax.ActionLink("testSign in", "_Login", "Account", new AjaxOptions { OnFailure = "OnFailure", LoadingElementId = "loading", OnSuccess = "ModalOnSuccess", UpdateTargetId = "dialogContent" }, new { @class = "btn", @role = "button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
