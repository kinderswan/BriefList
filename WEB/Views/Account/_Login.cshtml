@model WEB.Models.LoginModel

<div id="hidethisdiv" class="modal-content">
    <div class="modal-header">
        <button id="hidemodal" class="close" onclick="CloseWindow()" data-dismiss="modal-content" area-hidden="true">X</button>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-horizontal">


                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2  glyphicon glyphicon-user" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger " })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2 glyphicon glyphicon-lock" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" value="Enter" style="width:100px" class="btn btn-success btn-block"><i class="glyphicon glyphicon-ok"></i> Submit</button>
                    </div>
                </div>
            </div>

        }

    </div>
</div>

<script>
    function CloseWindow() {
        $('#modDialog').hide();
    }
</script>

