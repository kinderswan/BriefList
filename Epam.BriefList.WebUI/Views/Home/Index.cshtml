        </div>


        <div id="tasks" role="main">
            <div id="list-toolbar">
                <h1 class="title" style="padding-top: 0px; padding-bottom: 0px; margin-top: 10px;">
                    {{currentList.Title}}
                </h1>
                <div class="actionBar">
                    <div style="height: 0px;" class="actionBar-top">
                        
