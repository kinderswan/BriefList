@using Epam.BriefList.WebUI.HelperExtension
<!Doctype html>
<html style="overflow:auto;overflow-x:auto; position:relative; min-height:100%;min-width:450px">
<head>
    <meta charset=utf-8>
    <title>@ViewBag.Title – приложение ASP.NET</title>
    <link rel="stylesheet" href="style.css" />
    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ajaxfunctions")
    @Scripts.Render("~/bundles/Modal")
    <!--[if IE]>
     <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
      <!--[endif]-->
</head>
<body scroll="yes" ng-body>
    <nav class="navbar navbar-fixed-top navbar-inverse" style="position:absolute;">

        <div class="container-fluid">

            <div class="navbar-header">

                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>

            <div id="navbarCollapse" class="collapse navbar-collapse" width="150">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("All List", "StartPage", "Home")</li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="glyphicon glyphicon-user"></span>@Html.Action("Nickname", "Account", new { @class = "login" })
                            <b class="caret"></b>
                        </a>

                        <ul role="menu" class="dropdown-menu">
                            <li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span> AddList</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-ok"></span> SendList</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-ok"></span> Share List</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-ok"></span> ...</a></li>

                            <li><a href="/Cabinet/Settings"><span class="glyphicon glyphicon-cog"></span> Settings</a></li>

                        </ul>
                    </li>
                    <li>
                        <form action="/Home/FindLot" class="navbar-form navbar-left" role="search">
                            <div class="form-group">
                                <input type="text" name="Find" class="form-control" placeholder="Search Lists">
                            </div>
                            <input type="submit" value="Find List" class="btn btn-default" />
                        </form>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (!HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                       <!--<li><a href="/Account/_Register"><span class="glyphicon glyphicon-registration-mark"></span> Register</a></li>-->
                        <li>@Ajax.RawActionLink(string.Format("<span class='glyphicon glyphicon - registration - mark'></span> Register"), "_Register", "Account", null, new AjaxOptions { OnFailure = "onFailure", LoadingElementId = "loading", OnSuccess = "modalOnSuccess", UpdateTargetId = "dialogContent" }, new { @class = "btn", @role = "button" })</li>
                        <li>@Ajax.RawActionLink(string.Format("<span class='glyphicon glyphicon-log-in'></span> Sign in"), "_Login", "Account", null, new AjaxOptions { OnFailure = "onFailure", LoadingElementId = "loading", OnSuccess = "modalOnSuccess", UpdateTargetId = "dialogContent" }, new { @class = "btn", @role = "button" })</li>
                    }
                    else
                    {
                        <li><a href="/Account/Logoff"><span class="glyphicon glyphicon-log-out"></span> Sign Out </a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div style="margin-left:15px">

        @RenderBody()
    </div>
    <hr />
    <footer class="navbar navbar-fixed-bottom navbar-inverse" style="position: absolute;">
        <div class="container-fluid" style="color: #6b6b6b; text-align:right; text-decoration:solid">
            ASP.NET(Plotnikov and Gamanovih)  &copy; @DateTime.Now.Year
        </div>

    </footer>




</body>
</html>
